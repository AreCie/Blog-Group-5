@using Blog.Models.DBModel
@model Articles
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_layoutFront.cshtml";
}
<link href="~/Assets/css/info.css" rel="stylesheet">
<article>
    <aside>
        <div class="l_box">
            <div class="search">
                @Html.Action("SelKey", "PartialView")
            </div>
            <div class="fenlei">
                @Html.Action("ArtSort", "PartialView")
            </div>
            <div class="tuijian">
                @Html.Action("EtcRec", "PartialView")
            </div>
            <div class="tuijian">
                @Html.Action("ClickRank", "PartialView")
            </div>
            <div class="cloud">
                @Html.Action("CloudTags", "PartialView")
            </div>
            <div class="guanzhu">
                <h2>关注我 么么哒</h2>
                <ul>
                    <img src="~/Assets/images/wx.jpg">
                </ul>
            </div>
        </div>
    </aside>
    <div class="infosbox">
        <main>
            <div class="newsview">
                <h3 class="news_title">@Model.Title</h3>
                <div class="bloginfo">
                    <ul>
                        <li class="author">作者：<a href="/">@Model.Source</a></li>
                        <li class="lmname"><a href="/">学无止境</a></li>
                        <li class="timer">时间：@Model.PubTime</li>
                        <li class="view">@Model.ReadTimes 人已阅读</li>
                    </ul>
                </div>
                <div class="tags"><a href="/" target="_blank">个人博客</a> &nbsp; <a href="/" target="_blank">@Model.Tags</a></div>
                <div class="news_about"><strong>简介</strong>@Model.SimpleInfo</div>
                <div class="news_con">
                    @Model.Cont
                </div>
            </div>
            <div class="share">
                <p class="diggit">
                    <a href="JavaScript:makeRequest('/e/public/digg/?classid=3&amp;id=19&amp;dotop=1&amp;doajax=1&amp;ajaxarea=diggnum','EchoReturnedText','GET','');"> 很赞哦！ </a>(<b id="diggnum">
                        <script type="text/javascript" src="/e/public/ViewClick/?classid=2&id=20&down=5"></script>13
                    </b>)
                </p>
            </div>
            <div class="nextinfo">
                <p>上一篇：<a href="/news/life/2018-03-13/804.html">作为一个设计师,如果遭到质疑你是否能恪守自己的原则?</a></p>
                <p>下一篇：<a href="/news/life/">返回列表</a></p>
            </div>
            <div class="news_pl">
                <h2>文章评论</h2>
                <ul>
                    <div class="gbko"> </div>
                </ul>
            </div>
        </main>
    </div>
</article>
